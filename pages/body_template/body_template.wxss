

.body_par {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.body_par .body_par_author_data {
  margin: 10rpx 0 20rpx 10rpx;

} 
.body_par_author_data  .body_par_author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
  
} 
.body_par_author_data  .body_par_txt{
  font-size: 22rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  margin-bottom: 5rpx;

}
.body_par_title{
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.body_par_pic{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0 ; 
  margin-bottom: 5px;

}
.body_par_shi{
  font-size: 26rpx;
  margin-left: 20rpx;
  color: #666;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}
.body_par_like{
  flex-direction: row;
  line-height: 16rpx;
  margin-left: 10px;
  font-size: 13px;


}
.body_par_like_img{
  width: 32rpx;
  height: 32rpx;
  margin-right: 8px;
  vertical-align: middle;

}
.body_par_like_font{
  vertical-align: middle;
  margin-right: 20px;
}
.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}
.bj_mic{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  opacity: .4;
  left: 50%;
  margin-left: -45rpx;

  top: 200rpx;

 

}
.author-data {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.data {
  font-size: 24rpx;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2rpx;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image {
  float: right;
   width: 60rpx;
  height: 60rpx;
}
.collect {
  margin-right: 30rpx;
  
}

.horizon {
  width: 660rpx;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 60rpx;
  margin: 0 auto;
  z-index: -99;
  height: 1rpx;
}
.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  font-size: 24rpx;
}